<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonApplyFilter"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="500dp"
            android:text="APPLY" />

        <Button
            android:id="@+id/buttonClearFilter"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_marginTop="500dp"
            android:text="CLEAR" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="230dp"
            android:entries="@array/productCategory" />

        <TextView
            android:id="@+id/filterName"
            android:layout_width="82dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Name" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="35dp"
            android:ems="27"
            android:inputType="textPersonName"
            android:hint="Name"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/filterLowestPrice"
            android:layout_width="82dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:text="Lowest Price" />

        <EditText
            android:id="@+id/editTextFilterLowestPrice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="120dp"
            android:ems="7"
            android:inputType="number"
            android:hint="Lowest Price"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/filterHighestPrice"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="100dp"
            android:text="Highest Price" />

        <EditText
            android:id="@+id/editTextFilterHighestPrice"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="120dp"
            android:ems="7"
            android:inputType="number"
            android:hint="Highest Price"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/filterTo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="120dp"
            android:text="to"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/filterProductCondition"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="190dp"
            android:text="Product Condition" />

        <TextView
            android:id="@+id/filterProductCategory"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="245dp"
            android:text="Product Category" />

        <CheckBox
            android:id="@+id/filterNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="175dp"
            android:text="New" />

        <CheckBox
            android:id="@+id/filterUsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:layout_marginTop="175dp"
            android:text="Used" />




    </androidx.cardview.widget.CardView>

</FrameLayout>